<%= form_for(post.comments.build) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.hidden_field :post_id, :value => @post.id %>

	<div class="field">
		<%= f.label :content %>
		<%= f.text_area :content %>
	</div>

	<%= f.submit "Comment", class: "btn btn-primary" %>

<% end %>